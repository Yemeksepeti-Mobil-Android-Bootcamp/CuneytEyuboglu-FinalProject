<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    android:layout_margin="10dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@drawable/restdetailcard">

        <ImageView
            android:id="@+id/BasketFoodimg"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/BasketFoodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/bentonsans_medium"
            android:text="Herbal Pancake"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/BasketFoodimg"
            app:layout_constraintTop_toTopOf="@+id/BasketFoodimg" />

        <TextView
            android:id="@+id/BasketFoodPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bentonsans_medium"
            android:text="$7"
            android:textColor="@color/active_tab_color"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="@+id/BasketFoodimg"
            app:layout_constraintStart_toStartOf="@+id/BasketFoodName"
            app:layout_constraintTop_toBottomOf="@+id/BasketFoodName" />

        <ImageButton
            android:id="@+id/btn_removefromCart"
            android:src="@drawable/ic_baseline_remove_shopping_cart_24"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#00222222"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>